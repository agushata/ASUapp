<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcf3d3"
    tools:context=".ui.diaryPrilagusha.diaryPrilagushaFragment">

    <EditText
        android:id="@+id/editTextMonday"
        android:padding="5dp"
        android:maxLength="1000"
        android:gravity="top"
        android:layout_width="143dp"
        android:layout_height="196dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape"
        android:ems="10"
        android:inputType="textMultiLine"
        android:lines="8"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTuesday"
        android:padding="5dp"
        android:maxLength="1000"
        android:gravity="top"
        android:layout_width="143dp"
        android:layout_height="196dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape"
        android:ems="10"
        android:inputType="textMultiLine"
        android:lines="8"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextMonday" />

    <EditText
        android:id="@+id/editTextWednesday"
        android:padding="5dp"
        android:maxLength="1000"
        android:gravity="top"
        android:layout_width="143dp"
        android:layout_height="196dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape"
        android:ems="10"
        android:inputType="textMultiLine"
        android:lines="8"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTuesday" />

    <EditText
        android:id="@+id/editTextThursday"
        android:padding="5dp"
        android:maxLength="1000"
        android:gravity="top"
        android:layout_width="143dp"
        android:layout_height="196dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/shape"
        android:ems="10"
        android:inputType="textMultiLine"
        android:lines="8"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextFriday"
        android:padding="5dp"
        android:maxLength="1000"
        android:gravity="top"
        android:layout_width="143dp"
        android:layout_height="196dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/shape"
        android:ems="10"
        android:inputType="textMultiLine"
        android:lines="8"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextThursday" />

    <EditText
        android:id="@+id/editTextSaturday"
        android:padding="5dp"
        android:maxLength="1000"
        android:gravity="top"
        android:layout_width="143dp"
        android:layout_height="196dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/shape"
        android:ems="10"
        android:inputType="textMultiLine"
        android:lines="8"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextFriday" />

    <TextView
        android:id="@+id/Monday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="4dp"
        android:text="Понедельник"
        app:layout_constraintBottom_toTopOf="@+id/editTextMonday"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Tuesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="4dp"
        android:text="Вторник"
        app:layout_constraintBottom_toTopOf="@+id/editTextTuesday"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Wednesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="4dp"
        android:text="Среда"
        app:layout_constraintBottom_toTopOf="@+id/editTextWednesday"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Thursday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="124dp"
        android:layout_marginBottom="8dp"
        android:text="Четверг"
        app:layout_constraintBottom_toTopOf="@+id/editTextThursday"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/Friday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="8dp"
        android:text="Пятница"
        app:layout_constraintBottom_toTopOf="@+id/editTextFriday"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/Saturday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="8dp"
        android:text="Суббота"
        app:layout_constraintBottom_toTopOf="@+id/editTextSaturday"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>